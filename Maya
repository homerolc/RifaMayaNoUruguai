<body>

<h1>Rifa da Maya – Rumo ao Uruguai</h1>

<table id="rifaTable">
  <thead>
    <tr>
      <th>Nº</th>
      <th>Nome do Comprador</th>
      <th>Pago</th>
    </tr>
  </thead>
  <tbody></tbody>
</table>

<button id="exportBtn">Exportar Dados CSV</button>

<script>
  const TOTAL_NUMEROS = 100;
  const tbody = document.querySelector('#rifaTable tbody');

  // Função para criar a linha da tabela
  function criarLinha(numero) {
    const tr = document.createElement('tr');

    // Número
    const tdNum = document.createElement('td');
    tdNum.textContent = numero;
    tr.appendChild(tdNum);

    // Nome do comprador
    const tdNome = document.createElement('td');
    const inputNome = document.createElement('input');
    inputNome.type = 'text';
    inputNome.placeholder = 'Nome';
    tdNome.appendChild(inputNome);
    tr.appendChild(tdNome);

    // Pago
    const tdPago = document.createElement('td');
    const inputPago = document.createElement('input');
    inputPago.type = 'checkbox';
    tdPago.appendChild(inputPago);
    tr.appendChild(tdPago);

    // Atualiza a cor da linha ao mudar nome ou pago
    function atualizarCor() {
      if (inputNome.value.trim() === '') {
        tr.className = 'disponivel';
      } else if (inputPago.checked) {
        tr.className = 'pago';
      } else {
        tr.className = 'reservado';
      }
    }

    inputNome.addEventListener('input', atualizarCor);
    inputPago.addEventListener('change', atualizarCor);

    // Inicializar cor
    atualizarCor();

    return tr;
  }

  // Criar todas as linhas
  for (let i = 1; i <= TOTAL_NUMEROS; i++) {
    tbody.appendChild(criarLinha(i));
  }

  // Exportar para CSV
  function exportarCSV() {
    let csv = 'Numero,Nome,Pago\\n';
    for (const tr of tbody.children) {
      const numero = tr.children[0].textContent;
      const nome = tr.children[1].querySelector('input').value.replace(/,/g, '');
      const pago = tr.children[2].querySelector('input').checked ? 'Sim' : 'Não';
      csv += `${numero},${nome},${pago}\\n`;
    }
    // Criar arquivo e baixar
    const blob = new Blob([csv], {type: 'text/csv'});
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = 'rifa_maya.csv';
    a.click();
    URL.revokeObjectURL(url);
  }

  document.getElementById('exportBtn').addEventListener('click', exportarCSV);

</script>

</body>
